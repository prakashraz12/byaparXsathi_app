{
  "expo": {
    "name": "Byapar Sathi",
    "slug": "byaparsathi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app/adaptive-icon.png",
    "scheme": "byaparsathi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rzprakash.byaparsathi",
      "infoPlist": {
        "NSContactsUsageDescription": "A message that tells the user why the app is requesting access to the user's contacts.",
        "UIBackgroundModes": [
          "fetch",
          "processing"
        ]
      },
      "icon": "./assets/app/adaptive-icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "edgeToEdgeEnabled": true,
      "package": "com.rzprakash.byaparsathi",
      "permissions": [
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/app/adaptive-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/app/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "extraPods": [
              {
                "name": "simdjson",
                "configurations": [
                  "Debug",
                  "Release"
                ],
                "path": "../node_modules/@nozbe/simdjson",
                "modular_headers": true
              }
            ]
          }
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Byapar Sathi to access your contacts."
        }
      ],
      [
        "expo-media-library",
        {
          "mediaLibraryPermission": "Allow Byapar Sathi to access your media library.",
          "photosPermission": "Allow access to save PDFs to your photo library.",
          "savePhotosPermission": "Allow saving PDFs to your photo library."
        }
      ],
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fff4b759-cc60-49d1-9d75-4d34604d3218"
      }
    }
  }
}
